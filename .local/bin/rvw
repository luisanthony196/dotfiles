#!/bin/bash

rbw unlocked
if [ $? -ne 0 ]; then
  rbw unlock
fi

fzf_opt='--cycle --layout=reverse --border --height=40% --preview-window=wrap'

entry=$(rbw list | fzf $fzf_opt)

if [[ ! $entry ]]; then
  echo 'No existe esta entrada';  exit 1
fi

rbw get $entry | wl-copy
echo '[ '$entry' ] ===> Copiado al portapapeles'

