{
	"vim_mode": true,
	"buffer_font_size": 15,
	"buffer_font_family": "BlexMono Nerd Font Mono",
	"hard_tabs": true,
	"tab_bar": {
		"show": false
	},
	"project_panel": {
		"dock": "right"
	},
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Catppuccin Macchiato"
	},
	"languages": {
		"Python": {
			"language_servers": ["pylsp", "!pyright", "..."]
		}
	},
	"lsp": {
		"pylsp": {
			"settings": {
				"plugins": {
					"pycodestyle": {
						"enabled": true,
						"ignore": ["E501", "W191", "E101"]
					}
				}
			}
		}
	}
}
