{
	"features": {
		"edit_prediction_provider": "zed"
	},
	"buffer_font_family": "BlexMono Nerd Font Mono",
	"buffer_font_size": 15,
	"hard_tabs": true,
	"vim_mode": true,
	"tabs": {
		"file_icons": true
	},
	"tab_bar": {
		"show": true,
		"show_nav_history_buttons": false
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false
	},
	"project_panel": {
		"dock": "right"
	},
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Catppuccin Mocha"
	},
	"languages": {
		"Rust": {
   "show_edit_predictions": false
  },
  "Python": {
			"language_servers": ["pylsp", "!pyright", "..."]
		}
	},
	"lsp": {
		"pylsp": {
			"settings": {
				"plugins": {
					"pycodestyle": {
						"enabled": true,
						"ignore": ["E501", "W191", "E101"]
					}
				}
			}
		}
	}
}
