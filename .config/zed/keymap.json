[
	{
		"bindings": {
			"f1": "command_palette::Toggle",
			"f3": "projects::OpenRecent",
			"f4": "workspace::Open",
			// "ctrl-o": "workspace::ToggleRightDock",
			"ctrl-o": "vim::ToggleProjectPanelFocus",
			"ctrl-`": "zed::OpenKeymap",
			"ctrl-alt-;": "pane::CloseActiveItem",
			"ctrl-h": "search::SelectPreviousMatch",
			"ctrl-l": "search::SelectNextMatch",
			"ctrl-w": null, // split pane
			"ctrl-shift-w": null // close pane
		}
	},
	{
		"context": "Editor",
		"bindings": {
			"ctrl-c": "editor::Copy", // vim default: return to normal mode
			"ctrl-x": "editor::Cut", // vim default: decrement
			"ctrl-v": "editor::Paste", // vim default: visual block mode
			"ctrl-y": "editor::Undo", // vim default: line up
			"ctrl-f": "buffer_search::Deploy", // vim default: page down
			"ctrl-a": "editor::SelectAll", // vim default: increment
			"ctrl-r": ["buffer_search::Deploy", { "replace_enabled": true }], // vim default: redo
			// "ctrl-b": "pane::CloseActiveItem",
			"ctrl-j": "editor::GoToDiagnostic",
			"ctrl-k": "editor::GoToPreviousDiagnostic",
			"ctrl-h": "vim::MoveToPrevious",
			"ctrl-l": "vim::MoveToNext"
		}
	},
	{
		"context": "vim_mode == normal",
		"bindings": {
			"U": "editor::Redo",
			"backspace": "pane::GoBack",
			"enter": "pane::GoForward",
			"space": "editor::ToggleFold",
			"ctrl-w": "editor::SelectLargerSyntaxNode"
		}
	},
	{
		"context": "vim_mode == visual",
		"bindings": {
			"ctrl-w": "editor::SelectLargerSyntaxNode",
			"ctrl-shift-w": "editor::SelectSmallerSyntaxNode"
		}
	},
	{
		"context": "ProjectPanel && not_editing",
		"bindings": {
			"shift-a": "project_panel::NewFile"
		}
	}
]
